<div class="container">
  <div class="row-justify-content-center">
    <div class="col-xs-12">
      <h2 class="head-line text-center">配送先登録</h2>
      <div class="text-success">
        <%= flash[:notice] %>
      </div>
      <%= form_with model: @shipping_address do |f| %>
        <table class="table">
          <tr>
            <th><%= f.label :"郵便番号" %></th>
            <td><%= f.text_field :post_code, class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :"住所" %></th>
            <td><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          <tr>
            <th><%= f.label :"宛名" %></th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>
        </table>
        <%= f.submit "配送先新規登録", class: "btn btn-sm btn-success btn-block" %>
      <% end %>
    <table class= "table table-hover table-bordered mt-5">
      <h2 class="text-center mt-5">登録済み配送先一覧</h2>
      <thead>
        <tr class="info">
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
          <tr>
            <td><%= shipping_address.post_code %></td>
            <td><%= shipping_address.address %></td>
            <td><%= shipping_address.name %></td>
            <td>
              <%= link_to "編集する", edit_shipping_address_path(shipping_address), class: "btn btn-success btn-sm" %>
            </td>
            <td>
              <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-right">
      <%= link_to "マイページに戻る", customers_mypage_path, class: "btn btn-sm btn-light font-weight-bold" %>
    </div>
  </div>
</div>
