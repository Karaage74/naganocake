<div class="container">
  <h2>配送先編集</h2>
  <%= flash[:notice] %>
  <%= form_with model: @shipping_address do |f| %>
    <div class="field address">
      <%= f.label :"郵便番号" %><br>
      <%= f.text_field :post_code %>
    </div><br>
    <div class="field address">
      <%= f.label :"住所" %><br>
      <%= f.text_field :address %>
    </div><br>
    <div class="field address">
      <%= f.label :"宛名" %><br>
      <%= f.text_field :name %>
    </div><br>
    <div class="field address">
      <%= f.submit "更新する", class: "btn btn-sm btn-success" %>
    </div>
  <% end %>
  <%= link_to "前の画面に戻る", :back %>
</div>