<% if item.favorited_by?(current_customer) %>  <!-- ユーザーが「いいね」を押しているかを判別するためのメソッド -->
  <%= link_to item_favorites_path(item), method: :delete, remote: true do %>
    <i class="fas fa-heart favorite1"></i>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item), method: :post, remote: true do %>
    <i class="fas fa-heart favorite2"></i>
  <% end %>
<% end %>
