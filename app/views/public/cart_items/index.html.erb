<div class="container-fulid">
  <div class="row">
    <div class="col-md-4 offset-4 mt-5 mb-5">
      <h3 class="text-center">ショッピングカート</h3>
    </div>
    <div class="col-md-2 offset-1" style="padding-top: 90px; padding-left: 35px;">
      <%= link_to "カートを空にする", destroy_all_path, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-1">
      <table class="table table-hover border">
        <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="3"></th>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.item.with_tax_price %>円</td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
                  <td>
                    <%= f.number_field :quantity, min: 1, max: 100 %>
                    <%= f.submit "変更", class: 'btn btn-success ml-3' %>
                  </td>
                <% end %>
                  <td><%= cart_item.subtotal %>円</td>
                  <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
             </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-md-2 offset-3 mt-2">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <table class="table cart-table col-md-4 offset-1">
      <tbody>
        <tr>
          <td>合計金額</td>
          <td><%= @total_payment.floor.to_s(:delimited, delimiter: ',') %>円</td>
        </tr>
      </tbody>
    </table>
    <div class="col-md-2 offset-5 d-flex align-items-center mt-5 mb-5">
      <%= link_to "情報入力に進む", new_order_path,class: "btn btn-success", style: "width: 180px;"%>
    </div>
  </div>
</div>