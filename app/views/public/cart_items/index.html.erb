<h4>ショッピングカート</h4>

<%= link_to "カートを空にする", destroy_all_path, method: :delete %>
<table>
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th colspan="3"></th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %>円</td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
            <td>
              <%= f.select :quantity, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %>
              <%= f.submit "変更", class: 'btn btn-success' %>
            </td>
          <% end %>
            <td><%= cart_item.subtotal %>円</td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
       </tr>
  </tbody>
  <% end %>
</table>



<div class="col-xs-8">
  <%= link_to "買い物を続ける", root_path %>
  <tr>合計: <%= @total_payment.floor.to_s(:delimited, delimiter: ',') %></tr><br>
  <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
</div>