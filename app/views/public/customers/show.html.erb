<h4>マイページ</h4>
<div class="container">
  <div class="row">
    <div class"col-xs-offset-1 col-xs-8">
      <p>登録情報</p>
      <%= link_to "編集する", customers_edit_path, class: "btn btn-success" %>
      <table>
        <tbody>
          <tr>
            <td class="info col-xs-2">名前</td>
            <td class="text-left"><%= @customer.full_name %></td>
          </tr>
          <tr>
            <td class="info">カナ</td>
            <td class="text-left"><%= @customer.kana_full_name %></td>
          </tr>
          <tr>
            <td class="info">郵便番号</td>
            <td class="text-left"><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="info">住所</td>
            <td class="text-left"><%= @customer.postcode %></td>
          </tr>
          <tr>
            <td class="info">電話番号</td>
            <td class="text-left"><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <td class="info">メールアドレス</td>
            <td class="text-left"><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="mypage-shipping_addresses">
        <p><strong>配送先</strong>
        <%= link_to "一覧を見る", shipping_addresses_path, class: "btn btn-info" %>
        </p>
        <p><strong>注文履歴一覧</strong>
        <%= link_to "一覧をみる", orders_path, class: "btn btbn-info" %>
        </p>
      </div>
    </div>
  </div>
</div>

