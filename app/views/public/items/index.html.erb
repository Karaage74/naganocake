<div class="container">
	<div class="row">
		<div class="col-md-3 mt-5">
			<%= render 'public/items/sidebar', genres: @genres %>
		</div>
		<div class="col-md-8 offset-1 mt-5">
			<h2>商品一覧(全<%= @items_all.count %>件)</h2>
			<div class="card-deck">
			  <% @items.each do |item| %>
					<div class="col-4 mt-5 ">
						<div class="card text-dark bg-light">
							<%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
								<%= image_tag item.item_image, width:"100%", height:"150px" %><br>
								<%= item.name %><br>
								¥<%= item.price_without_tax.to_s(:delimited, delimiter: ',') %>
							<% end %>
						</div>
					</div>
				<% end %>
			</div>
			<div class="offset-5 mt-5" style="text-align: center;"><%= paginate @items %></div>
		</div>
	</div>
</div>