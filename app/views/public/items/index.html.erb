<div class="container">
	<h2>商品一覧(全<%= @items.count %>件)</h2>
	<div class="row">
	  <!--<div class="card-deck">-->
		  <% @items.each do |item| %>
				<div class="col-3 col-xs-offset-1 mt-3">
					<div class="card text-dark bg-light">
						<%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false} do %>
							<%= image_tag item.item_image, width:"100%", height:"150px" %><br>
							<%= item.name %><br>
							¥<%= item.price_without_tax.to_s(:delimited, delimiter: ',') %>
						<% end %>
					</div>
				</div>
			<% end %>
		<!--</div>-->
	</div>
	<div style="text-align: center;"><%= paginate @items %></div>
</div>