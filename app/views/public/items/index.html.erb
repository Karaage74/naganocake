<div class="container-fulid">
	<div class="row">
		<div class="col-md-3 " style="margin-top: 150px;">
			<%= render 'public/items/sidebar', genres: @genres %>
		</div>
		<div class="col-md-8 mt-5" style="margin-left: 50px;">
			<h2>
				商品一覧(全<%= @items_all.count %>件)
			</h2>
			<div class="card-deck">
			  <% @items.each do |item| %>
					<div class="col-md-4 mt-5 ">
						<div class="card border border-secondary text-dark bg-light rounded">
							<%= link_to item_path(item.id) ,style: "color: black;", data: {"turbolinks" => false}, class: "rounded" do %>
								<%= image_tag item.item_image, width:"100%", height:"150px" %><br>
								<div class="card-body">
									<div class="card-title"><%= item.name %><br></div>
									<p class="card-text mb-0">
										¥<%= item.price_without_tax.to_s(:delimited, delimiter: ',') %>
									</p>
									<% if item.is_sale_status %>
					                  <p class="card-text text-success font-weight-bold mb-0" style="text-align: right;">販売中</p>
					                <% else %>
					                  <p class="card-text text-danger font-weight-bold mb-0" style="text-align: right;">販売停止中</p>
					                <% end %>
								</div>
							<% end %>
						</div>
					</div>
			  <% end %>
			</div>
		  	<div class="offset-md-5 mt-5" style="text-align: center;"><%= paginate @items %></div>
		</div>
	</div>
</div>