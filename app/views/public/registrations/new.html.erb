<h2>新規会員登録</h2>

<%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :名前（姓） %><br>
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :名前（名） %><br>
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :名前（セイ） %><br>
    <%= f.text_field :last_name_kana %>
  </div>
  
  <div class="field">
    <%= f.label :名前（メイ） %><br>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br>
    <%= f.text_field :postcode %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %><br>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %><br>
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success btn-sm" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<h4><%= link_to "こちら", "/customers/sign_in" %>　からログインしてください</h4>
