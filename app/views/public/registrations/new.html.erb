<div class="container">
  <h2 class="text-center">新規会員登録</h2>
  <div class="row-justify-content-center">
    <div class="col-xs-offset-1 col-xs-11">
      <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <table class="table">
          <tr>
            <th><%= f.label :名前（姓） %></th>
            <td><%= f.text_field :last_name, class: "form-control" %></td>
          </tr>
          
          <tr>
            <th><%= f.label :名前（名） %></th>
            <td><%= f.text_field :first_name, class: "form-control" %></td>
          </div>
          
          <tr>
            <th><%= f.label :名前（セイ） %></th>
            <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
          </tr>
          
          <tr>
            <th><%= f.label :名前（メイ） %></th>
            <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
          </tr>
        
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
          </tr>
          
          <tr>
            <th><%= f.label :郵便番号 %></th>
            <td><%= f.text_field :postcode, class: "form-control" %></td>
          </tr>
          
          <tr>
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address, class: "form-control" %></td>
          </tr>
          
          <tr>
            <th><%= f.label :電話番号 %></th>
            <td><%= f.text_field :phone_number, class: "form-control" %></td>
          </tr>
          
          <tr>
            <th>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
            </th>
            <td><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %></td>
          </tr>
          
          <tr>
            <th><%= f.label :パスワード（確認） %></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %></td>
          </tr>
        </table>
        <div class="justify-content-center">
            <%= f.submit "新規登録", class: "btn btn-primary btn-sm btn-block" %>
        </div>
      <% end %>
      
      <div class="col-xs-12 mt-5">
        <h4 class="text-center">既に登録済みの方はこちらからログインしてください</h4>
        <h4 class="text-center"><%= link_to "ログイン画面へ", "/customers/sign_in", class: "btn btn-success btn-block btn-sm" %></h4>
      </div>
    </div>
  </div>
</div>
