<div class="container">
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row-justify-content-center">
    <h2 class="text-center">会員情報編集</h2>
    <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
      <table class="table table-bordered">
        <tr>
          <th><%= f.label :"名字" %></th>
          <td><%= f.text_field :last_name, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"名前" %></th>
          <td><%= f.text_field :first_name, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"名字（カナ）" %></th>
          <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"名前（カナ）" %></th>
          <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"郵便番号" %></th>
          <td><%= f.text_field :postcode, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"住所" %></th>
          <td><%= f.text_field :address, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"電話番号" %></th>
          <td><%= f.text_field :phone_number, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        </tr>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </table>
      <div class="text-center">
        <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm btn-block" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= link_to "退会する", custormers_unsubscribe_path, class: "btn btn-danger btn-sm btn-block mt-2" %>
    </div>
    <div class="text-right">
      <%= link_to "1つ前に戻る", :back, class: "btn btn-light btn-sm font-weight-bold mt-2" %>
    </div>
  </div>
</div>



  




