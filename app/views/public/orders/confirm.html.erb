<h4>注文情報確認</h4>

<table>
  <thead>
    <tr>
      <td>商品名</td>
      <td>単価</td>
      <td>数量</td>
      <td>小計</td>
    </tr>
  </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="text-left">
            <%= image_tag cart_item.item.item_image, size: "60x60", fallback: "no-image.jpeg" %>
            <%= cart_item.item.name %>
          </td>
          <td class="text-right">
            ¥<%= ((cart_item.item.price_without_tax * 1.1).floor).to_s(:delimited, delimiter: ',') %>
          </td>
          <td class="text-right">
              <%= cart_item.quantity %>
          </td>
          <td class="text-right">
            ¥<%= ((cart_item.item.price_without_tax * 1.1).floor * cart_item.quantity).to_s(:delimited, delimiter: ',') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-xs-3 billing">
  <table class="table table-hover table-condensed table-bordered">
      <tr>
        <th class="info">送料</th>
        <td class="text-right col-xs-5">
          ¥<%= @order.shipping_cost.to_s(:delimited, delimiter: ',') %>
        </td>
      </tr>
      <tr>
        <th class="info">商品合計</th>
        <td class="text-right">
          ¥<%= (@order.total_payment.to_i - @order.shipping_cost.to_i).to_s(:delimited, delimiter: ',') %>
        </td>
      </tr>
      <tr>
        <th class="info">請求金額</th>
        <td class="text-right">
          ¥<%= @order.total_payment.to_s(:delimited, delimiter: ',') %>
        </td>
      </tr>
  </table>
</div>
<div class="col-xs-9 billing">
  <table class="table table-hover table-condensed table-bordered">
    <tr>
      <th  class="info">支払方法</th>
      <td class="text-left">
        <%= @order.payment_method_i18n %>
      </td>
    </tr>
    <tr>
      <th  class="info">お届け先</th>
      <td class="text-left">
        <%= @order.post_code %><br>
        <%= @order.address %><br>
        <%= @order.name %>
      </td>
    </tr>
  </table>
  </tbody>
</table>

<%= form_with model: @order, url: orders_path, local: true do |f| %>

<%= f.hidden_field :post_code %>
<%= f.hidden_field :address %>
<%= f.hidden_field :name %>
<%= f.hidden_field :payment_method %>
<%= f.hidden_field :customer_id %>
<%= f.hidden_field :shipping_cost %>
<%= f.hidden_field :total_payment %>
<%= f.hidden_field :order_status %>

<%= f.submit "購入を確定する"  %>
<% end %>