<%= flash[:error] %>
<div class="container">
  <h2>ログイン</h2>
  <div class="row">
    <div class="col-xs-offset-1 col-xs-11">
      <h4 class="head-line title_h2 text-center">会員の方はこちらからログイン</h4>
  
      <%= form_with model: @customer, url: session_path(resource_name) do |f| %>
        <table class="table">
          <tr>
            <td>
              メールアドレス　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <td>
              パスワード　    <%= f.password_field :password, autocomplete: "current-password" %>
            </td>
          </tr>
          <tr>
            <td class='form-group'>
              <%= f.submit "Log in", class: "btn btn-sm btn-success" %>
            </td>
          </tr>
        </table>
      <% end %>
  </div>
  <div class="row">
    
      <div class="col-xs-9">
        <h2 class="head-line title_h2 text-center">会員登録がお済みでない方</h2>
        <h4><%= link_to "こちら", "/customers/sign_up" %> から新規会員登録を行ってください</h4>
      </div>
    </div>
  </div>
</div>





