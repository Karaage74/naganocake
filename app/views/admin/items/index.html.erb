<div class='container'>
  <div class='row'>
    <div class="col-12">
      <h2>商品一覧</h2>
      <div class="text-right">
        <%= link_to "新規登録",new_admin_item_path %>
      </div>


      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price_without_tax.to_s(:delimited, delimiter: ',') %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_sale_status %>
                販売中
                <% else %>
                販売停止中
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
