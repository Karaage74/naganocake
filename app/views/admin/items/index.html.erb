<div class='container'>
  <div class='row'>
    <div class="col-12 mt-5">
      <h2>商品一覧</h2>
      <div class="text-right mb-4">
        <%= link_to "新規登録",new_admin_item_path, class: "btn btn-info", style: "width: 180px;" %>
      </div>


      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品画像</th>
            <th scope="col">商品名</th>
            <th scope="col">税抜価格</th>
            <th scope="col">ジャンル</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= image_tag item.get_item_image(100, 75)%></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price_without_tax.to_s(:delimited, delimiter: ',') %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_sale_status %>
                  <p class="text-success font-weight-bold">販売中</p>
                <% else %>
                  <p class="text-danger font-weight-bold">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row", style="text-align: center;">
        <div class="col-6 offset-5">
        <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>
