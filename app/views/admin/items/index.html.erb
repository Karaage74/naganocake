<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品一覧</h2>

      <h2><%= link_to "新規登録", new_admin_item_path %></h2>

      <table>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name ,admin_item_path(item) %></td>
              <td><%= item.price_without_tax.to_s(:delimited, delimiter: ',') %></td>
              <td><%= item.genre.name %></td>
              <td>
                <% if item.is_sale_status %>
                販売中
                <% else %>
                販売停止中
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
