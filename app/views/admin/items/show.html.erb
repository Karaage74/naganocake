<div class="container my-5">
  <div class="row">
    <h2>商品詳細</h2>
  </div>

  <div class="row mt-3">
    <div class="offset-sm-1 col-sm-3">
      <%= image_tag @item.item_image, size:"400x300" %>
    </div>

    <div class="col-sm-4 offset-2">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>

          <tr>
            <td>商品説明</td>
            <td><%= @item.item_detail %></td>
          </tr>

          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>

          <tr>
            <td>税込価格(税抜価格)</td>
            <td>
              <%= @item.with_tax_price.to_s(:delimited, delimiter: ',') %>円
            </td>
          </tr>

          <tr>
            <td>販売ステータス</td>
            <% if @item.is_sale_status %>
            <td>販売中</td>
            <% else %>
            <td>販売停止中</td>
            <% end %>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>