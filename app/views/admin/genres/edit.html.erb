<div class="container-fulid">
  <div class="row">
    <div class="col-md-4 offset-4 border border-secondary text-center rounded bg-light" style="margin-top: 100px; margin-bottom: 55px; height: 300px;">
      <h3 class="mt-4">ジャンル編集</h3>
      <%= form_for(@genre, url: admin_genre_path(@genre)) do |f| %>
        <%= f.label :ジャンル名, class: "mt-4" %><br>
        <%= f.text_field :name, class: "mt-3" %><br>
        <%= f.submit '変更を保存', class: 'btn btn-success', style: "width: 190px; height: 50px; margin-top: 50px" %>
      <% end %>
    </div>
  </div>
</div>
