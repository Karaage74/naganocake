<div class="container-fulid">
  <div class="row">
    <div class="col-md-3 offset-2 rounded bg-light genre-form" style="margin-top: 200px; height: 300px;">
      <div class="form text-center">
        <h4 class="mt-4">ジャンル登録</h4>
        <%= form_for(@genre, url: admin_genres_path) do |f| %>
          <%= f.label :ジャンル名, class: "mt-4" %><br>
          <%= f.text_field :name, class: "mt-3" %><br>
          <%= f.submit '新規登録', class: 'btn btn-success', style: "width: 190px; height: 50px; margin-top: 50px" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-3 offset-1" style="margin-top: 100px;">
      <table class="table genre-table bg-light ml-4" style="margin-top: 60px;">
        <thead>
          <tr>
            <th style="padding-left: 100px;">ジャンル一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <td class="pl-4"><%= genre.name %></td>
            <td class="pt-3 pb-3"><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
          </tr>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
