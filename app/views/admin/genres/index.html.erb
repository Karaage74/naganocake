<h4>ジャンル一覧・追加</h4>
<%= form_for(@genre, url: admin_genres_path) do |f| %>
  <%= f.label :ジャンル名 %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>

<div class="table">
  <table>
    <thead>
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
      </tr>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>