<div class="container">
  <div class="row-justify-content-center">
      <h2 class="head-line text-center">
        <%= @customer.full_name %>さんの会員情報編集
      </h2>
    <%= form_with model: @customer, url:admin_customer_path do |f| %>
      <div class="col-xs-10">
        <div class="form-group col-xs-9">
          <%= f.label :"会員ID", class: "col-sm-4 font-weight-bold" %>
          <%= f.label :"#{@customer.id}" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"氏名", class: "col-sm-4 control-label font-weight-bold" %>
          <%= f.text_field :last_name, class: "col-sm-3 form-control-static name" %>
          <%= f.text_field :first_name, class: "col-sm-3 form-control-static name" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"フリガナ", class: "col-sm-4 control-label font-weight-bold" %>
          <%= f.text_field :last_name_kana, class: "col-sm-3 form-control-static name" %>
          <%= f.text_field :first_name_kana, class: "col-sm-3 form-control-static name" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"郵便番号", class: "col-sm-4 control-label font-weight-bold" %>
          <%= f.text_field :postcode %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"住所", class: "col-sm-4 control-label font-weight-bold" %>
          <%= f.text_field :address %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"電話番号", class: "col-sm-4 control-label font-weight-bold" %>
          <%= f.text_field :phone_number %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"会員ステータス", class: "col-sm-4 control-label font-weight-bold" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会済み", {value: true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効", {value: false, style: "display: inline-block;"} %>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "変更を保存する", class: "btn btn-sm btn-success" %>
        <%= link_to "前に戻る", admin_customer_path, class: "btn btn-sm btn-info" %>
      </div>
    <% end %>
    </div>
  </div>
</div>